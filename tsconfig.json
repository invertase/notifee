{
  "include": [
    "packages/react-native/src/**/*.ts",
    "tests_react_native/__tests__",
    "tests_react_native/example"
  ],
  "compilerOptions": {
    "noEmit": true,
    "allowJs": true,
    "target": "esnext",
    "isolatedModules": true,
    "module": "commonjs",
    "declaration": true,
    "importHelpers": true,
    "jsx": "react",
    "sourceMap": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "preserveConstEnums": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "lib": [
      "es6"
    ]
  },
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js",
  ]
}