{
  "name": "@notifications/root",
  "private": true,
  "scripts": {
    "prepare": "yarn lerna:link && lerna run prepare && yarn tests_rn:ios:pod:install",
    "build:core": "yarn build:core:android && yarn build:core:ios",
    "build:core:android": "cd ./android && ./gradlew assembleRelease",
    "build:core:ios": "cd ./ios && pod install && xcodebuild BITCODE_GENERATION_MODE=bitcode OTHER_CFLAGS=-fembed-bitcode -workspace NotifeeCore.xcworkspace -scheme Framework ONLY_ACTIVE_ARCH=NO -configuration Release -sdk iphoneos -UseModernBuildSystem=YES clean build | xcpretty",
    "build:all:clean": "rimraf android/build && rimraf android/.gradle && rimraf ios/build && lerna run build:clean",
    "build:rn": "cd packages/react-native && yarn build",
    "build:rn:watch": "cd packages/react-native && yarn build:watch",
    "validate:all:js": "eslint . --ext .js,.jsx,.ts,.tsx",
    "validate:all:ts": "tsc --project ./",
    "lerna:bootstrap": "lerna bootstrap",
    "lerna:link": "lerna link && lerna exec -- yarn link",
    "lerna:clean": "lerna clean",
    "gen:reference": "node scripts/generate-typedoc.js",
    "tests_rn:packager": "cd tests_react_native && npx react-native start",
    "tests_rn:packager:reset-cache": "cd tests_react_native && npx react-native start --reset-cache",
    "run:android": "cd tests_react_native && npx react-native run-android  --variant 'debug' --appIdSuffix dev",
    "run:ios": "cd tests_react_native && npx react-native run-ios --scheme=Notifee",
    "tests_rn:test": "cd tests_react_native && jest",
    "tests_rn:test-watch": "cd tests_react_native && jest --watch",
    "tests_rn:test-coverage": "cd tests_react_native && jest --coverage",
    "tests_rn:android:test": "cd tests_react_native && npx cavy-cli run-android --appIdSuffix dev",
    "tests_rn:ios:test": "cd tests_react_native && npx cavy-cli run-ios --scheme=Notifee",
    "tests_rn:ios:pod:install": "cd tests_react_native && cd ios && pod install && cd .."
  },
  "devDependencies": {
    "@types/node": "^14.11.2",
    "@react-native-community/eslint-config": "^1.1.0",
    "@typescript-eslint/eslint-plugin": "^2.18.0",
    "@typescript-eslint/parser": "^2.18.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.5.0",
    "eslint-plugin-prettier": "^3.1.1",
    "eslint-plugin-react": "^7.19.0",
    "lerna": "^3.18.3",
    "prettier": "^1.19.1",
    "rimraf": "^2.7.1",
    "typedoc": "^0.15.0",
    "typescript": "^3.7.5"
  },
  "lint-staged": {
    "packages/**/*.js": [
      "eslint --fix",
      "git add"
    ],
    "tests/**/*.js": [
      "eslint --fix",
      "git add"
    ],
    "*.{json,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "workspaces": {
    "packages": [
      "packages/react-native",
      "tests_react_native"
    ],
    "nohoist": [
      "**/chai",
      "**/chai/**",
      "**/cavy",
      "**/cavy/**",
      "**/cavy-native-reporter",
      "**/cavy-native-reporter/**",
      "**/prop-types",
      "**/prop-types/**",
      "**/patch-package",
      "**/patch-package/**",
      "**/react",
      "**/react/**",
      "**/react-native",
      "**/react-native/**"
    ]
  },
  "dependencies": {
    "axios": "^0.19.0",
    "shelljs": "^0.8.3"
  }
}
